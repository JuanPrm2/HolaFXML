<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>


<VBox fx:id="root" alignment="CENTER" fillWidth="false" prefHeight="200.0" prefWidth="320.0" spacing="5.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/16">
   <children>
      <TextField fx:id="textFieldNombre" maxWidth="170.0" promptText="Introduce un nombre" />
      <Button fx:id="botonSaludo" defaultButton="true" mnemonicParsing="false" onAction="#onClick" text="Saludar" />
      <Label fx:id="saludoLabel" alignment="TOP_LEFT" text="Aqui saldra el saludo" />
   </children>
</VBox>
